package A2_AplicacionesGraficas;



import javax.swing.JFrame;
import javax.swing.JPanel;

public class A2_58_EscribiendoEnMarco {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		MarcoConTexto miMarco = new MarcoConTexto();
		miMarco.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		miMarco.setVisible(true);
	}
}


class MarcoConTexto extends JFrame{
	public MarcoConTexto() {
		setVisible(true);
		setSize(600,450);
		setLocation(400,200);
		setTitle("Primer Texto");
		Lamina lamina1 = new Lamina();
		add(lamina1);
		
	}
}

class Lamina extends JPanel{
	//SOBREESCRIBIMOS EL METODO PAITCOMPONENT
	public void paitComponent(Graphics g) {
		//INVOCAMOS AL CONSTRUCTOR DE LA CLASE PADRE, PARA QUE EL MÉTODO HAGA LO QUE REALMENTE HACE.
		super.paintComponent(g);
		//DESPUÉS LE DECIMOS QUE HAGA LO QUE NOSOTROS QUEREMOS Q HAGA.
		g.drawString("Estamos Aprendiendo Swing", 100, 100);
	}
}